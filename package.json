{
  "name": "nimnamfood-chrome-extension",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build && tsc -p tsconfig.scripts.json",
    "postbuild": "node generate-manifest.js",
    "watch": "rm -rf dist && concurrently --kill-others 'ng build --watch --configuration development --delete-output-path false' 'tsc -p tsconfig.scripts.json --watch'"
  },
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "modern-normalize": "^3.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.1",
    "@angular/cli": "^20.1.1",
    "@angular/compiler-cli": "^20.1.0",
    "@types/chrome": "^0.1.1",
    "@types/node": "^24.0.15",
    "concurrently": "^9.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "typescript": "~5.8.2"
  }
}
